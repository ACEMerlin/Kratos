<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KratosTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FBFBFB</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#D9D9D9</item>
        <item name="colorAccent">#FBFBFB</item>
    </style>

    <style name="KratosTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#666666</item>
        <item name="actionMenuTextAppearance">@style/KratosTheme.MenuTextStyle</item>
    </style>

    <style name="KratosTheme.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="KratosTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set title color -->
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>